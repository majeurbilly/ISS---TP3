# Configuration MySQL complète pour serveur 2
# Basée sur les paramètres par défaut de MySQL 8.0 avec personnalisations

[mysqld]
# === IDENTIFICATION ET BASIQUES ===
server-id = 2
datadir = /var/lib/mysql
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid

# === CONNEXION ===
port = 3306
bind-address = 0.0.0.0
max_connections = 151
max_connect_errors = 100

# === MOTEUR DE STOCKAGE ===
default-storage-engine = InnoDB
innodb_buffer_pool_size = 128M
innodb_log_file_size = 48M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 50

# === JOURNALISATION ===
log_error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
general_log = 0
general_log_file = /var/log/mysql/general.log

# === CARACTÈRES ET CHARSET ===
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# === SQL MODE ===
sql_mode = NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# === SÉCURITÉ ===
local_infile = 0
skip_show_database

# === PERFORMANCE ===
query_cache_type = 0
query_cache_size = 0
tmp_table_size = 32M
max_heap_table_size = 32M

# === RÉSEAU ===
skip_networking = 0
wait_timeout = 28800
interactive_timeout = 28800

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqldump]
default-character-set = utf8mb4

[mysqld_safe]
log-error = /var/log/mysql/error.log
pid-file = /var/run/mysqld/mysqld.pid


